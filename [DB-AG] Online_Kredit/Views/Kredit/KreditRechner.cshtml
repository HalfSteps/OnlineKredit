@model _DB_AG__Online_Kredit.Models.KreditRechnerModel

@{
    ViewBag.Title = "KreditRechner";
}

<div id="content" style="margin-top: 20px">
    <h2>KreditRechner</h2>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()


        <div class="form-horizontal">
            <div class="row" style="margin-top: 20px">
                <div class="col-lg-offset_4 col-md-offset-4 col-lg-6 col-md-6">
                    Herzlich Willkommen bei ihrem persönlichen Online Kreditrechner ihrer Infinitus Bank <br /> Bitte geben Sie den Betrag als auch die gewünschte Laufzeit an.
                </div>
            </div>

            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="row">
                <div class="col-lg-offset-1 col-md-offset-1 col-lg-3 col-md-3" style="text-align: right">
                    @Html.LabelFor(model => model.KreditBetrag, htmlAttributes: new { @class = "control-label" })
                </div>
                <div class="col-lg-6 col-md-6">
                    @Html.EditorFor(model => model.KreditBetrag, new { htmlAttributes = new { @class = "form-control", id = "gewuenschterBetrag" } })
                    @Html.ValidationMessageFor(model => model.KreditBetrag, "", new { @class = "text-danger" })

                </div>
            </div>
            <div class="row">

                <div class="col-lg-offset-1 col-md-offset-1 col-lg-3 col-md-3" style="text-align: right">
                    @Html.LabelFor(model => model.Laufzeit, htmlAttributes: new { @class = "control-label" })
                </div>
                <div class="col-lg-6 col-md-6">
                    @Html.EditorFor(model => model.Laufzeit, new { htmlAttributes = new { @class = "form-control", id = "laufzeit" } })
                    @Html.ValidationMessageFor(model => model.Laufzeit, "", new { @class = "text-danger" })

                </div>
            </div>

            <div class="row">
                <div class="col-lg-offset-4 col-md-offset-4 col-lg-3 col-md-3">
                    <input type="submit" value="Bestätigen" class="btn btn-default" />
                </div>
            </div>


        </div>
    }


    @section Scripts {

        <script type="text/javascript">
            //http://ionden.com/a/plugins/ion.rangeSlider/en.html
            $(document).ready(function () {
                $("#gewuenschterBetrag").ionRangeSlider({
                    min: 1000,
                    max: 1000000,
                    from: 25000,
                    grid: true,
                    prefix: "€ ",
                    step: 1000
                });
                $("#laufzeit").ionRangeSlider({
                    min: 4,
                    max: 90,
                    from: 36,
                    grid: true,
                    prefix: "Monate ",
                    step: 1
                });
            });
        </script>
    }

</div>