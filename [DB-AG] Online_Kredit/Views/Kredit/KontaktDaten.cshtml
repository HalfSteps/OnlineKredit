@model _DB_AG__Online_Kredit.Models.KontaktdatenModel

@{
    ViewBag.Title = "KontaktDaten";
}

<div id="content" style="margin-top: 20px">
    <h2>KontaktDaten</h2>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        @Html.HiddenFor(model => model.ID_Kunde)

        <div class="form-horizontal">
            <div class="row" style="margin-top: 20px">
                <div class="col-lg-offset-4 col-md-offset-4 col-lg-6 col-md-6">
                    Bitte tragen Sie in die unten stehenden Eingabefelder Ihre aktuelle finanzielle Situation ein.
                    <br /><br />
                    Erfassen Sie dazu Ihr aktuelles monatliches Einkommen (14x jährlich), etwaige Wohnkosten (wie z.B. Miete, Heizung, Strom)
                    Einkünfte aus Alimente und Unterhaltszahlungen an Sie bzw. Unterhaltszahlungen von Ihnen.
                </div>
            </div>
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="row">
                <div class="col-lg-offset-1 col-md-offset-1 col-lg-3 col-md-3" style="text-align: right">
                    @Html.LabelFor(model => model.Straße, htmlAttributes: new { @class = "control-label" })
                </div>
                <div class="col-lg-6 col-md-6">
                    @Html.EditorFor(model => model.Straße, new { htmlAttributes = new { @class = "form-control", placeholder = "0" } })
                    @Html.ValidationMessageFor(model => model.Straße, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="row">
                <div class="col-lg-offset-1 col-md-offset-1 col-lg-3 col-md-3" style="text-align: right">
                    @Html.LabelFor(model => model.Hausnummer, htmlAttributes: new { @class = "control-label" })
                </div>
                <div class="col-lg-6 col-md-6">
                    @Html.EditorFor(model => model.Hausnummer, new { htmlAttributes = new { @class = "form-control", placeholder = "0" } })
                    @Html.ValidationMessageFor(model => model.Hausnummer, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="row">
                <div class="col-lg-offset-1 col-md-offset-1 col-lg-3 col-md-3" style="text-align: right">
                    @Html.LabelFor(model => model.ID_Land, htmlAttributes: new { @class = "control-label" })
                </div>
                <div class="col-lg-6 col-md-6">
                    @Html.DropDownListFor(model => model.ID_Land, new SelectList(Model.AlleLaender, "ID", "Bezeichnung"))
                    @Html.ValidationMessageFor(model => model.ID_Land, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="row">
                <div class="col-lg-offset-1 col-md-offset-1 col-lg-3 col-md-3" style="text-align: right">
                    @Html.LabelFor(model => model.Ort, htmlAttributes: new { @class = "control-label" })
                </div>
                <div class="col-lg-6 col-md-6">
                    @Html.EditorFor(model => model.Ort, new { htmlAttributes = new { @class = "form-control", placeholder = "0" } })
                    @Html.ValidationMessageFor(model => model.Ort, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="row">
                <div class="col-lg-offset-1 col-md-offset-1 col-lg-3 col-md-3" style="text-align: right">
                    @Html.LabelFor(model => model.ID_PLZ, htmlAttributes: new { @class = "control-label" })
                </div>
                <div class="col-lg-6 col-md-6">
                    @Html.EditorFor(model => model.ID_PLZ, new { htmlAttributes = new { @class = "form-control", placeholder = "0" } })
                    @Html.ValidationMessageFor(model => model.ID_PLZ, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="row">
                <div class="col-lg-offset-1 col-md-offset-1 col-lg-3 col-md-3" style="text-align: right">
                    @Html.LabelFor(model => model.EMail, htmlAttributes: new { @class = "control-label" })
                </div>
                <div class="col-lg-6 col-md-6">
                    @Html.EditorFor(model => model.EMail, new { htmlAttributes = new { @class = "form-control", placeholder = "0" } })
                    @Html.ValidationMessageFor(model => model.EMail, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="row">
                <div class="col-lg-offset-1 col-md-offset-1 col-lg-3 col-md-3" style="text-align: right">
                    @Html.LabelFor(model => model.TelefonNummer, htmlAttributes: new { @class = "control-label" })
                </div>
                <div class="col-lg-6 col-md-6">
                    @Html.EditorFor(model => model.TelefonNummer, new { htmlAttributes = new { @class = "form-control", placeholder = "0" } })
                    @Html.ValidationMessageFor(model => model.TelefonNummer, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="row">
                <div class="col-lg-offset-4 col-md-offset-4 col-lg-3 col-md-3">
                    <input type="submit" value="Bestätigen" class="btn btn-default" />
                </div>
            </div>
        </div>
    }
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
